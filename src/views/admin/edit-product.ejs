<%- include('../includes/head.ejs'); %>
    <div class="add-product">
        <h1>Add product</h1>
        <div class="add-product__form-card">
            <form action="/admin/edit-product" method="post">
                <input type="hidden" name="id" value="<%= product?.id || "" %>">
                <div class="form-ctrl form-ctrl--fullwidth">
                    <Label for="title">Title</Label>
                    <input id="title" name="title" value="<%=product?.title || "" %>" />
                </div>
                <div class="form-ctrl form-ctrl--fullwidth">
                    <Label for="imgUrl">Image Url</Label>
                    <input id="imgUrl" name="imgUrl" value="<%=product?.imgUrl || "" %>"/>
                </div>
                <div class="form-ctrl form-ctrl--fullwidth">
                    <Label for="price">Price</Label>
                    <input type="number" step="0.01" id="price" name="price" value="<%=product?.price || "" %>" />
                </div>
                <div class="form-ctrl form-ctrl--fullwidth">
                    <Label for="description">Description</Label>
                    <textarea id="description" name="description" rows="4" ><%=product?.description || "" %></textarea>
                </div>
                <div class="form-ctrl form-ctrl--fullwidth">
                    <button type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
<%- include('../includes/end.ejs'); %>